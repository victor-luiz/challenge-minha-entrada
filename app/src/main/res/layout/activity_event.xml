<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.event.EventActivity"
>
    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_event"
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.Toolbar.Overflow"
            app:titleTextColor="?attr/colorOnPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar_event"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
        >
            <TextView
                    android:id="@+id/description_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp" android:lineSpacingExtra="4sp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Descrição completa do evento, com todos os detalhes, informações sobre as bandas, horários, preços e tudo mais."
            />

            <TextView
                    android:id="@+id/date_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textSize="18sp" app:drawableStartCompat="@drawable/ic_date"
                    app:layout_constraintTop_toBottomOf="@id/description_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="31 de Agosto de 2025"
            />
            <TextView
                    android:id="@+id/time_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textSize="18sp" app:drawableStartCompat="@drawable/ic_time"
                    app:layout_constraintTop_toBottomOf="@id/date_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="22:00"
            />
            <TextView
                    android:id="@+id/location_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:textSize="18sp" app:drawableStartCompat="@drawable/ic_location"
                    app:layout_constraintTop_toBottomOf="@id/time_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Tubarão - Santa Catarina"
            />
            <br.com.minhaentrada.victor.challenge.ui.components.CategoryChipView
                    android:id="@+id/category_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/location_text_view"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:text="Show"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>